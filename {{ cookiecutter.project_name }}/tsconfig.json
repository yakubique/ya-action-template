{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "es6"
    ],
    "module": "commonjs",
    "rootDir": "src",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "action",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules",
    "{{ cookiecutter.project_name }}/src/**/*.spec.ts",
    "{{ cookiecutter.project_name }}/src/**/*.test.ts"
  ]
}
